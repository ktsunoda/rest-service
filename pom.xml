    <parent>
        <groupId>io.berkeley</groupId>
        <artifactId>java-root-pom</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>

    <scm>
        <connection>scm:git:ssh://git@github.com/ktsunoda/rest-service.git</connection>
        <tag>HEAD</tag>
    </scm>
